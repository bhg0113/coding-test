   "source": [
    "def solution(num):\n",
    "    i=0\n",
    "    while i <500:\n",
    "        if num ==1:\n",
    "            break \n",
    "        if num %2 ==0:\n",
    "            num /=2\n",
    "        else:\n",
    "            num = num *3 +1\n",
    "        i+=1\n",
    "    if num != 1:\n",
    "        return -1\n",
    "\n",
    "    return i"
   ]
  }
